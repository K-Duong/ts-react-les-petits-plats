{
  "compilerOptions": {
    "target": "es6", // Specifies the JavaScript version the code will compile to.
    "module": "commonjs", // The module system to use.
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true, // Enable all strict type-checking options.
    "esModuleInterop": true, // Allow default imports from modules with no default export.
    "skipLibCheck": true, // Skip type checking of declaration files.
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*", // Include all TypeScript files under src.
    "src/app/App.tsx",
    "src/main.tsx"
  ],
  "exclude": [
    "node_modules", // Exclude node_modules from compilation.
    "dist" // Exclude the build folder.
  ]
}
